<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:authViewModels="clr-namespace:EquipmentRepairAvaloniaUI.MVVM.ViewModels.AuthViewModels"
             x:Class="EquipmentRepairAvaloniaUI.MVVM.Views.AuthViews.AuthorizationView"
             x:DataType="authViewModels:AuthorizationViewModel"
             d:DataContext="{d:DesignInstance authViewModels:AuthorizationViewModel, IsDesignTimeCreatable=False}"
             mc:Ignorable="d" 
             d:Height="500" d:Width="800">

    <Grid RowDefinitions="*">
        <Border 
            Background="White" 
            MaxWidth="400"
            Margin="100" 
            BorderThickness="2" 
            CornerRadius="20" 
            VerticalAlignment="Top">
            <Border.Effect>
                <DropShadowEffect 
                    BlurRadius="20" />
            </Border.Effect>
            <StackPanel Margin="30, 20,30,20">
                <Button 
                    Margin="0 0 0 10"
                    Command="{Binding NavigateToRegistrationPageCommand}" 
                    HorizontalAlignment="Left"
                    Width="150" 
                    Content="Создать аккаунт"/>
                
                <Label 
                    Foreground="Black"
                    Content="АВТОРИЗАЦИЯ" 
                    HorizontalAlignment="Center" 
                    FontSize="25" 
                    FontWeight="Bold"/>
            
                <TextBox 
                    Foreground="Black"
                    Watermark="Логин"
                    Text="{Binding Login}" 
                    FontSize="20"/>
                
                <TextBox
                    Foreground="Black"
                    Watermark="Пароль"
                    PasswordChar="*"
                    Text="{Binding Password}" 
                    FontSize="20"/>

                <Button 
                    Command="{Binding AuthorizationCommand}" 
                    Margin="0, 20, 0, 0" 
                    Height="50" 
                    Padding="10, 7, 10, 7"
                    Content="Войти" 
                    FontSize="20"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
