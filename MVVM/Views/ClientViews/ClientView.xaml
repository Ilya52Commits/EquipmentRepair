<Page x:Class="EquipmentRepair.Viws.ClientViews.ClientView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:clientViewModels="clr-namespace:EquipmentRepair.MVVM.ViewModels.ClientViewModels"
      d:DataContext="{d:DesignInstance Type=clientViewModels:ClientViewModel}"
      mc:Ignorable="d" 
      d:Height="800"
      Title="ClientView">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="30, 10, 30, 0"  VerticalAlignment="Top">
            <Button
                Command="{Binding NavigateToAuthorizationCommand}"  
                Content="Назад" 
                Width="100"
                HorizontalAlignment="Left"/>
        </StackPanel>

        <StackPanel
            Grid.Column="0" Margin="140, 10, 30, 0"  
            VerticalAlignment="Top">
            <Button 
                Command="{Binding NavigateToAddApplicationCommand}" 
                Content="Создать заявку" 
                Width="150" 
                HorizontalAlignment="Left"/>
        </StackPanel>

        
    
        <TextBox
            Grid.Column="0" Height="30" 
            Text="{Binding Pattern, UpdateSourceTrigger=PropertyChanged}"
            materialDesign:HintAssist.Hint="Поиск" 
            Margin="30, 0, 0, 150" 
            Width="300" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center"
            Padding="0, 0, 10, 0"
            FontSize="15"/>

        <DataGrid
            ItemsSource="{Binding Requests}"
            AutoGenerateColumns="False" 
            Grid.Column="1" Grid.Row="0" 
            CanUserAddRows="False"
            Margin="30, 10, 30, 0" 
            VerticalAlignment="Center">

            <DataGrid.Columns>
                <DataGridTextColumn 
                    Binding="{Binding Id}"
                    IsReadOnly="True"
                    Header="Номер заявки"/>
                <DataGridTextColumn 
                    Binding="{Binding StartDate}"
                    IsReadOnly="True"
                    Header="Дата добавления"/>
                <DataGridTextColumn 
                    Binding="{Binding TypeEquipment}"
                    Header="Тип устройства"/>
                <DataGridTextColumn 
                    Binding="{Binding ModelEquipment}"
                    Header="Модель устройства"/>
                <DataGridTextColumn 
                    Binding="{Binding DescriptionFault}"
                    Header="Описание проблемы"/>
                <DataGridTextColumn 
                    Binding="{Binding Status}" 
                    IsReadOnly="True"
                    Header="Статус заявки"/>
                <DataGridTextColumn 
                    Binding="{Binding CompletionDate}"
                    IsReadOnly="True"
                    Header="Дата завершения"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
